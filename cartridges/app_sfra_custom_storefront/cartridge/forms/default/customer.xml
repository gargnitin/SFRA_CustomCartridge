<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19" secure="false">
<group formid="customer">
		<field 
			formid="firstname" 
			label="label.input.customerfirstname.profile" 
			mandatory="true" 
			max-length="50"
			missing-error="error.message.required" 
			range-error="error.message.lessthan50"
			value-error="ValueErrorText" 
			type="string" />

		<field 
			formid="lastname" 
			label="label.input.customerlastname.profile" 
			mandatory="true" 
			max-length="50" 
			missing-error="error.message.required"
			range-error="error.message.lessthan50" 
			type="string" />
</group>
</form>